<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.SiteSync" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/orange</item>
        <item name="colorSurfaceContainerHigh">@color/orange</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <style name="ThemeOverlay.AppCompat.." parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/orange</item>
        <item name="colorSurfaceContainerHigh">@color/orange</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>

    <!-- Normal app theme (used in MainActivity and rest of app) -->
    <style name="Theme.SiteSync" parent="Base.Theme.SiteSync">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSurface">@color/orange</item>
        <item name="colorSurfaceContainerHigh">@color/orange</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
     </style>

    <!-- Splash theme (only used for SplashActivity) -->
    <style name="Theme.SiteSync.Splash" parent="Base.Theme.SiteSync">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>